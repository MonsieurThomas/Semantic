generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  email     String     @unique
  password  String
  remainingPages Int       @default(2200)
  verificationCode String?
  codeExpiresAt    DateTime?
  documents Document[] // Relation to documents
}

model Document {
  id             Int      @id @default(autoincrement())
  date           DateTime @default(now())
  name           String
  color          String
  title          String
  url            String
  theme          String[]
  themeSize      Int[]
  page           Int
  mimeType       String
  path           String
  size           Int
  createdAt      DateTime @default(now())
  openaiResponse Json?
  rawText        String?
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  elements       Json?
  texts          String[]
}


model File {
  id        Int      @id @default(autoincrement())
  name      String
  mimeType  String
  path      String
  createdAt DateTime @default(now())
}
