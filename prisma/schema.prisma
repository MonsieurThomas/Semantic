generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int        @id @default(autoincrement())
  username         String     @unique
  email            String     @unique
  password         String
  remainingPages   Int        @default(120)
  codeExpiresAt    DateTime?
  verificationCode String?
  documents        Document[]
}

model Document {
  id             Int      @id @default(autoincrement())
  date           DateTime @default(now())
  name           String
  color          String
  title          String
  url            String
  theme          String[]
  themeSize      Int[]
  page           Int
  mimeType       String
  path           String
  size           Int
  createdAt      DateTime @default(now())
  openaiResponse Json?
  rawText        String?
  userId         Int
  elements       Json?
  texts          String[]
  fileData       Bytes?
  user           User     @relation(fields: [userId], references: [id])
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  mimeType  String
  path      String
  createdAt DateTime @default(now())
}
